<div id="user-errors">
  <%= render 'shared/errors' %>
</div>

<div id="user-form-container">
  <%= form_for(@user) do |f| %>
    <%= f.label :first_name, "First name:" %>
    <%= f.text_field :first_name, value: !!@user.first_name ? @user.first_name : ""  %>
    <%= f.label :last_name, "Last name:" %>
    <%= f.text_field :last_name, value: !!@user.last_name ? @user.last_name : "" %>
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username, value: !!@user.username ? @user.username : "" %>
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email, value: !!@user.email ? @user.email : "" %>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <%= f.submit yield(:submit_text), :disable_with => 'Submiting...' %>
  <% end %>
</div>
